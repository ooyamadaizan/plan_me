<%= render "shared/top_header" %>

<div class="main-container">
  <div class="left-column">
    <h1>タスク一覧</h1>
    <button id="create-task-btn" class="btn btn-primary mb-3">新しいタスクを作成</button>
    <div id="tasks-container">
      <%= render partial: 'shared/task', collection: @tasks %>
    </div>
    <div class="pagination-buttons">
      <button id="prev-tasks" class="btn btn-secondary" disabled>前の6件</button>
      <button id="next-tasks" class="btn btn-secondary">次の6件</button>
    </div>
  </div>

  <div class="right-column">
    <div id="digital-clock"></div>
    <div class="calendar-container">
      <h2>カレンダー</h2>
      <%= month_calendar(events: @calendar_tasks) do |date, tasks| %>
        <%= date.day %>
        <% tasks.each do |task| %>
          <div class="calendar-task">
            <%= task.title %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
