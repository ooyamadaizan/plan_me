<div class="main devise-main">
  <div class="inner devise-inner">
    <div class="form__wrapper" id="signup-form">
      <h2 class="page-heading">ユーザー新規登録</h2>

      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user devise-form', local: true do |f| %>
        <%= render "devise/shared/error_messages", model: f.object %>

        <div class="field">
          <%= f.label :nickname, "ニックネーム", class: "form-label" %><br />
          <%= f.text_field :nickname, class: "form-input", autofocus: true, required: true %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス", class: "form-label" %><br />
          <%= f.email_field :email, id:"user_email", class: "form-input", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）", class: "form-label" %><br />
          <%= f.password_field :password, id:"user_password", class: "form-input", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力", class: "form-label" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", class: "form-input", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "form__btn" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
